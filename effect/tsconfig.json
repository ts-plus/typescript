{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2021",
        "moduleResolution": "Node",
        "strict": true,
        "outDir": "build/esm",
        "declaration": true,
        "declarationDir": "build/dts",
        "skipLibCheck": true,
        "lib": ["ES2021"],
        "tsPlusModuleDiscoveryLocalSuffix": "js",
        "tsPlusTracingPackageName": "@app"
    },
    "include": ["src/**/*.ts"]
}